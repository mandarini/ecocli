{
  "name": "katerpack",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "katerpack/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/katerpack"
      }
    },
    "post-build": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "echo '#!/usr/bin/env node' > dist/katerpack/index.js.tmp && cat dist/katerpack/index.js >> dist/katerpack/index.js.tmp && mv dist/katerpack/index.js.tmp dist/katerpack/index.js && chmod +x dist/katerpack/index.js"
      },
      "dependsOn": ["build"]
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs katerpack {args.ver} {args.tag}",
      "dependsOn": ["post-build"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../coverage/katerpack"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["katerpack/**/*.ts", "katerpack/package.json"]
      }
    }
  },
  "tags": []
}
